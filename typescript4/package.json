{
  "name": "typescript-code-instruments",
  "version": "1.0.6",
  "description": "Task logging library for typescript.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "docs/**/*",
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf package-lock.json node_modules",
    "docs:build": "typedoc src/index.ts",
    "docs:upload": "ts-node node_modules/typescript-upload-docs/lib/index",
    "build": "tsc",
    "start": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Alan Pita",
  "license": "ISC",
  "devDependencies": {
    "@types/luxon": "^1.26.4",
    "@types/node": "^22.5.4",
    "node": "^22.8.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.26.7",
    "typescript": "^5.3.3",
    "typescript-upload-docs": "^1.0.8"
  },
  "dependencies": {
    "@types/json-stringify-safe": "^5.0.3",
    "json-stringify-safe": "^5.0.1",
    "luxon": "^2.3.1"
  }
}
